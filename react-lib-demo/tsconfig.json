{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "lib": ["DOM", "ES2020"],
    "sourceMap": false,
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types"],
    "resolveJsonModule": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "noImplicitAny": false,
    "jsx": "react-jsx"
  },
  "include": ["./src", "typings.d.ts"],
  "exclude": ["./example"]
}
